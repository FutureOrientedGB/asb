    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'source_dependency_tree'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=source_dependency_tree",
                    "--package=source_dependency_tree"
                ],
                "filter": {
                    "name": "source_dependency_tree",
                    "kind": "bin"
                }
            },
            "args": [
                "--source-dirs=test_c_cpp"
            ],
            "cwd": "${workspaceFolder}"
        },
    ]
}