{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--clang-lib-dir=\"D:/Program Files/LLVM/bin\"",
                "--source=\"test_c_cpp/src/main.cpp\""
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'auto_build_source_tree'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=auto_build_source_tree",
                    "--package=auto_build_source_tree"
                ],
                "filter": {
                    "name": "auto_build_source_tree",
                    "kind": "bin"
                }
            },
            "args": [
                "--source-dir=test_c_cpp/src",
                "--entry-point-source=main.cpp",
                "--project=test_c_cpp"
            ],
            "cwd": "${workspaceFolder}"
        },
    ]
}